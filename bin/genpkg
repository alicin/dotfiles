#!/bin/bash

# Profile-based package dumping script
# Usage: genpkg [--dry-run|-n] <profile_name>
# Example: genpkg discobot-darwin
# Example: genpkg --dry-run discobot-darwin

DRY_RUN=false

# Parse command line arguments
while [[ $# -gt 0 ]]; do
    case $1 in
        --dry-run|-n)
            DRY_RUN=true
            shift
            ;;
        *)
            PROFILE_NAME="$1"
            shift
            ;;
    esac
done

if [ -z "$PROFILE_NAME" ]; then
    echo "Usage: $0 [--dry-run|-n] <profile_name>"
    echo "Available profiles:"
    ls -1 profiles/ | grep -v '^\.' 2>/dev/null || echo "  No profiles found"
    echo ""
    echo "Options:"
    echo "  --dry-run, -n    Show what would be done without executing"
    exit 1
fi

PROFILE_DIR="$HOME/labs/dotfiles/profiles/$PROFILE_NAME"
PROFILE_JSON="$PROFILE_DIR/profile.json"
PACKAGES_DIR="$PROFILE_DIR/packages"

# Check if profile exists
if [ ! -f "$PROFILE_JSON" ]; then
    echo "Error: Profile '$PROFILE_NAME' not found"
    echo "Expected profile file: $PROFILE_JSON"
    exit 1
fi

if [ "$DRY_RUN" = true ]; then
    echo "ðŸ” DRY RUN: Showing what would be done for profile: $PROFILE_NAME"
else
    echo "ðŸ”„ Dumping packages for profile: $PROFILE_NAME"
fi

# Create packages directory if it doesn't exist
if [ "$DRY_RUN" = true ]; then
    echo "ðŸ“ Would create directory: $PACKAGES_DIR (if not exists)"
else
    mkdir -p "$PACKAGES_DIR"
fi

# Clear existing package files
if [ "$DRY_RUN" = true ]; then
    echo "ðŸ§¹ Would clear existing package files in: $PACKAGES_DIR"
    if [ -d "$PACKAGES_DIR" ] && [ "$(ls -A "$PACKAGES_DIR" 2>/dev/null)" ]; then
        echo "   Files that would be removed:"
        ls -1 "$PACKAGES_DIR" | sed 's/^/     /'
    else
        echo "   No existing files to remove"
    fi
else
    echo "ðŸ§¹ Clearing existing package files..."
    rm -rf "$PACKAGES_DIR"/*
fi

# Function to check if command exists
command_exists() {
    command -v "$1" >/dev/null 2>&1
}

# Function to check if package manager is enabled in profile
is_package_manager_enabled() {
    local pm="$1"
    # Use jq to check if package manager is enabled, fallback to grep if jq not available
    if command_exists jq; then
        jq -r ".package_managers.$pm.enabled // false" "$PROFILE_JSON" 2>/dev/null | grep -q "true"
    else
        grep -q "\"$pm\"" "$PROFILE_JSON" 2>/dev/null
    fi
}

# Function to get package manager filename from profile
get_package_manager_file() {
    local pm="$1"
    if command_exists jq; then
        jq -r ".package_managers.$pm.file // \"$pm.txt\"" "$PROFILE_JSON" 2>/dev/null
    else
        # Fallback to default naming
        case "$pm" in
            "homebrew") echo "Brewfile" ;;
            "dnf") echo "dnf.txt" ;;
            "pacman") echo "pacman.txt" ;;
            "yay") echo "aur.txt" ;;
            "flatpak") echo "flatpak.txt" ;;
            *) echo "$pm.txt" ;;
        esac
    fi
}

# Homebrew
if is_package_manager_enabled "homebrew"; then
    BREWFILE=$(get_package_manager_file "homebrew")
    if command_exists brew; then
        if [ "$DRY_RUN" = true ]; then
            echo "ðŸ“¦ Would dump Homebrew packages to $BREWFILE using: brew bundle dump --force"
        else
            echo "ðŸ“¦ Dumping Homebrew packages to $BREWFILE..."
            cd "$PACKAGES_DIR" && brew bundle dump --force
            echo "âœ… Homebrew packages dumped"
        fi
    else
        if [ "$DRY_RUN" = true ]; then
            echo "âš ï¸  Would skip Homebrew (brew command not found)"
        fi
    fi
fi

# DNF (Fedora)
if is_package_manager_enabled "dnf"; then
    DNF_FILE=$(get_package_manager_file "dnf")
    if command_exists dnf; then
        if [ "$DRY_RUN" = true ]; then
            echo "ðŸ“¦ Would dump DNF packages to $DNF_FILE using: dnf repoquery --userinstalled"
        else
            echo "ðŸ“¦ Dumping DNF packages to $DNF_FILE..."
            dnf repoquery --userinstalled | awk -F'-[0-9]' '{print $1}' | sort -u > "$PACKAGES_DIR/$DNF_FILE"
            if [ $? -eq 0 ]; then
                echo "âœ… DNF packages dumped ($(wc -l < "$PACKAGES_DIR/$DNF_FILE") packages)"
            else
                echo "âŒ Failed to dump DNF packages"
            fi
        fi
    else
        if [ "$DRY_RUN" = true ]; then
            echo "âš ï¸  Would skip DNF (dnf command not found)"
        else
            echo "âš ï¸  Skipping DNF (dnf command not found)"
        fi
    fi
fi

# Yay/AUR (Arch Linux) - dump AUR packages first so we can filter them from pacman
if is_package_manager_enabled "yay"; then
    AUR_FILE=$(get_package_manager_file "yay")
    if command_exists yay; then
        if [ "$DRY_RUN" = true ]; then
            echo "ðŸ“¦ Would dump AUR packages (yay) to $AUR_FILE using: yay -Qqm"
        else
            echo "ðŸ“¦ Dumping AUR packages (yay) to $AUR_FILE..."
            yay -Qqm > "$PACKAGES_DIR/$AUR_FILE"
            echo "âœ… AUR packages (yay) dumped"
        fi
    elif command_exists pacman; then
        if [ "$DRY_RUN" = true ]; then
            echo "ðŸ“¦ Would dump AUR packages (pacman) to $AUR_FILE using: pacman -Qqm"
        else
            echo "ðŸ“¦ Dumping AUR packages (pacman) to $AUR_FILE..."
            pacman -Qqm > "$PACKAGES_DIR/$AUR_FILE"
            echo "âœ… AUR packages (pacman) dumped"
        fi
    else
        if [ "$DRY_RUN" = true ]; then
            echo "âš ï¸  Would skip AUR packages (neither yay nor pacman found)"
        fi
    fi
fi

# Pacman (Arch Linux) - filter out AUR packages
if is_package_manager_enabled "pacman"; then
    PACMAN_FILE=$(get_package_manager_file "pacman")
    AUR_FILE=$(get_package_manager_file "yay")
    if command_exists pacman; then
        if [ "$DRY_RUN" = true ]; then
            echo "ðŸ“¦ Would dump Pacman packages to $PACMAN_FILE using: pacman -Qqe (excluding AUR packages)"
        else
            echo "ðŸ“¦ Dumping Pacman packages to $PACMAN_FILE..."
            # Get all explicitly installed packages, then filter out AUR packages
            if [ -f "$PACKAGES_DIR/$AUR_FILE" ]; then
                pacman -Qqe | grep -vxFf "$PACKAGES_DIR/$AUR_FILE" > "$PACKAGES_DIR/$PACMAN_FILE"
                echo "âœ… Pacman packages dumped (AUR packages filtered out)"
            else
                pacman -Qqe > "$PACKAGES_DIR/$PACMAN_FILE"
                echo "âœ… Pacman packages dumped"
            fi
        fi
    else
        if [ "$DRY_RUN" = true ]; then
            echo "âš ï¸  Would skip Pacman (pacman command not found)"
        fi
    fi
fi

# Flatpak
if is_package_manager_enabled "flatpak"; then
    FLATPAK_FILE=$(get_package_manager_file "flatpak")
    if command_exists flatpak; then
        if [ "$DRY_RUN" = true ]; then
            echo "ðŸ“¦ Would dump Flatpak packages to $FLATPAK_FILE using: flatpak list --app --columns=application"
        else
            echo "ðŸ“¦ Dumping Flatpak packages to $FLATPAK_FILE..."
            flatpak list --app --columns=application > "$PACKAGES_DIR/$FLATPAK_FILE"
            if [ $? -eq 0 ]; then
                echo "âœ… Flatpak packages dumped ($(wc -l < "$PACKAGES_DIR/$FLATPAK_FILE") packages)"
            else
                echo "âŒ Failed to dump Flatpak packages"
            fi
        fi
    else
        if [ "$DRY_RUN" = true ]; then
            echo "âš ï¸  Would skip Flatpak (flatpak command not found)"
        else
            echo "âš ï¸  Skipping Flatpak (flatpak command not found)"
        fi
    fi
fi

# Show summary
echo ""
if [ "$DRY_RUN" = true ]; then
    echo "ðŸ” DRY RUN complete for profile: $PROFILE_NAME"
    echo "ðŸ“ Package files would be saved to: $PACKAGES_DIR"
    echo "ðŸ’¡ Run without --dry-run to actually execute the commands"
else
    echo "ðŸŽ‰ Package dump complete for profile: $PROFILE_NAME"
    echo "ðŸ“ Package files saved to: $PACKAGES_DIR"
    if [ -d "$PACKAGES_DIR" ]; then
        echo "ðŸ“‹ Generated files:"
        ls -la "$PACKAGES_DIR" | grep -v '^d' | awk '{print "   " $9 " (" $5 " bytes)"}'
    fi
fi