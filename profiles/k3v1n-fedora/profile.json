{
  "name": "k3v1n-fedora",
  "description": "Tablet running Fedora Linux",
  "hostname": "k3v1n.local",
  "os": "fedora",
  "arch": "x86_64",
  "package_managers": {
    "dnf": {
      "enabled": true,
      "file": "dnf.txt"
    },
    "flatpak": {
      "enabled": true,
      "file": "flatpak.txt"
    },
    "homebrew": {
      "enabled": true,
      "file": "Brewfile"
    }
  },
  "configs": [
    "atuin",
    "zsh",
    "bat",
    "btop",
    "lazygit",
    "hypr",
    "gtk-3.0",
    "gtk-4.0",
    "hyprpanel",
    "dunst",
    "wofi",
    "ghostty",
    "posting",
    "yazi",
    "uwsm",
    "code-flags.conf",
    "electron-flags.conf",
    "electron13-flags.conf",
    "electron25-flags.conf",
    "mimeapps.list"
  ],
  "dotfiles": [".zshrc", ".gitconfig", ".editorconfig", ".icons"],
  "themes": ["fonts", "wallpapers"],
  "scripts": {
    "pre_install": ["prepare.sh"],
    "post_install": [
      "workspace.sh",
      "permissions.sh",
      "services.sh",
      "finalize.sh",
      "v3-audio-fix.sh"
    ]
  },
  "environment": {
    "BROWSER": "chrome",
    "TERMINAL": "ghostty",
    "XDG_SESSION_TYPE": "wayland"
  }
}
